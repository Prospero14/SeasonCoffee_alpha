<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eff0f3"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageCoffee"
        android:layout_width="113dp"
        android:layout_height="160dp"
        android:layout_marginStart="152dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="@+id/imageMatcha"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageTea"
        app:srcCompat="@drawable/lemonade" />

    <ImageView
        android:id="@+id/imageTea"
        android:layout_width="113dp"
        android:layout_height="160dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="152dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageCoffee"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cacao" />

    <ImageView
        android:id="@+id/imageMatcha"
        android:layout_width="113dp"
        android:layout_height="160dp"
        android:layout_marginStart="152dp"
        android:layout_marginEnd="152dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageCoffee"
        app:srcCompat="@drawable/milkshake" />

</androidx.constraintlayout.widget.ConstraintLayout>